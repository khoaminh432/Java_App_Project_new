<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="425.0" prefWidth="535.0" styleClass="form-card" stylesheets="@../../../../css/product.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="my_app.controller.component.product.AddProductController">

    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Title -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="THÊM SẢN PHẨM" />
      <VBox spacing="15.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
         
                              <!-- ID -->
                     <Label prefHeight="42.0" prefWidth="150.0" stylesheets="@../../../../css/product.css" text="Tên sản phẩm:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                     <TextField fx:id="tfNameProduct" prefWidth="250.0" promptText="Nhập Tên SP" styleClass="text-field" stylesheets="@../../../../css/product.css" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefHeight="42.0" prefWidth="150.0" stylesheets="@../../../../css/product.css" text="Đơn giá: " HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfPriceProduct" prefWidth="66.0" promptText="Nhập Đơn giá" styleClass="text-field" stylesheets="@../../../../css/product.css" HBox.hgrow="ALWAYS" />
                  <ComboBox prefWidth="124.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefHeight="42.0" prefWidth="150.0" stylesheets="@../../../../css/product.css" text="Đơn vị:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfUnitProduct" prefWidth="163.0" promptText="Nhập Đơn vị" styleClass="text-field" stylesheets="@../../../../css/product.css" HBox.hgrow="ALWAYS" />
                  <ComboBox prefWidth="86.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label prefHeight="42.0" prefWidth="150.0" stylesheets="@../../../../css/product.css" text="Số lượng:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="tfQuantityProduct" prefWidth="250.0" promptText="Số lượng" styleClass="text-field" stylesheets="@../../../../css/product.css" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <HBox spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="42.0" prefWidth="73.0" stylesheets="@../../../../css/product.css" text="Tình Trạng:">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cbbStatusProduct" prefWidth="120.0" />
                     </children>
                  </HBox>
                  <HBox spacing="20.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="42.0" prefWidth="91.0" stylesheets="@../../../../css/product.css" text="Loại Sản Phẩm:">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cbbCategoryProduct" prefWidth="154.0" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#handleAddProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" styleClass="btn-primary" text="Thêm sản phẩm" />

            <Button onAction="#handleCancel" style="-fx-background-color: #F44336; -fx-text-fill: white;" styleClass="btn-danger" text="Hủy" />
        </HBox>

    </VBox>
</AnchorPane>
